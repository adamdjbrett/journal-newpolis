---js
const pagination = {
    data: "collections",
    size: 1,
    alias: "tag",
    filter: ["all", "posts", "authors", "archivesIndex"],
};

const eleventyExcludeFromCollections = true;

const eleventyComputed = {
    title: "Topic: {{ tag }}",
    permalink: function(data) {
        return `/tags/${this.slugify(data.tag)}/`;
    }
};

const layout = "layouts/base.njk";
---
<main class="container my-5">
    <header class="mb-5 pb-3 border-bottom">
        <span class="text-muted text-uppercase small fw-bold">Browsing Topic</span>
        <h1 class="display-5 serif fw-bold">{{ title }}</h1>
    </header>

    <div class="row g-4">
    {% set postslist = collections[ tag ] | reverse %}
    {% for post in postslist %}
        <div class="col-md-6">
            <article class="h-100 border p-4 shadow-sm bg-white d-flex flex-column">
                <h3 class="h4 serif fw-bold">
                    <a href="{{ post.url }}" class="text-decoration-none text-dark">{{ post.data.title }}</a>
                </h3>
                <p class="text-secondary small mt-2">
                    {{ post.data.description | truncate(120) }}
                </p>
                <div class="mt-auto pt-3 border-top small text-muted">
                    {{ post.date | readableDate }}
                </div>
            </article>
        </div>
    {% endfor %}
    </div>

    <footer class="mt-5 pt-4">
        <a href="/tags/" class="text-dark fw-bold text-decoration-none border-bottom border-dark pb-1">
            &larr; View all topics
        </a>
    </footer>
</main>